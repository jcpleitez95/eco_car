<div class="form-container">

    <% if flash[:errors] %>
        <%= flash[:errors] %>
    <%end%>

  <%= form_for :session, url: login_path do |f| %>
    <div class="form-input">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class="form-input">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit "Log In", class: "form-btn" %>
    
  <% end %>
  </body>
